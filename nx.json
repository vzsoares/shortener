{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "namedInputs": {
        "default": ["sharedGlobals"],
        "prod": [
            "default",
            "!{projectRoot}/**/?(*.)+(spec|test).ts",
            "!{projectRoot}/**/*_test.go"
        ],
        "sharedGlobals": [
            "{workspaceRoot}/.github/*",
            "{workspaceRoot}/go.work",
            "{projectRoot}/**/*",
            "{workspaceRoot}/.gitignore",
            "{projectRoot}/**/*.ts",
            "{projectRoot}/**/*.go",
            "!{projectRoot}/**/*.md",
            "!{projectRoot}/dist",
            "!{projectRoot}/tmp",
            "!{projectRoot}/**/function.zip",
            "!{projectRoot}/**/bootstrap"
        ]
    },
    "release": {
        "changelog": {
            "workspaceChangelog": {
                "createRelease": "github"
            }
        },
        "projects": ["shortener"]
    },
    "workspaceLayout": {
        "appsDir": "apps",
        "libsDir": "libs"
    },
    "defaultBase": "origin/prod",
    "targetDefaults": {
        "build": {
            "cache": true,
            "dependsOn": ["lint", "test", "pre-build"],
            "outputs": [
                "{projectRoot}/dist",
                "{projectRoot}/function/**/function.zip",
                "{projectRoot}/function/**/bootstrap"
            ],
            "configurations": {
                "prod": {
                    "args": ["STAGE=prod"]
                },
                "dev": {
                    "args": ["STAGE=dev"]
                }
            }
        },
        "test": {
            "cache": true,
            "configurations": {
                "prod": {
                    "args": ["STAGE=prod"]
                },
                "dev": {
                    "args": ["STAGE=dev"]
                }
            }
        },
        "lint": {
            "cache": true
        },
        "deploy": {
            "cache": false,
            "dependsOn": ["^build", "build"],
            "configurations": {
                "prod": {
                    "args": ["STAGE=prod"]
                },
                "dev": {
                    "args": ["STAGE=dev"]
                }
            }
        }
    },
    "plugins": ["@nx-go/nx-go"],
    "tasksRunnerOptions": {
        "default": {
            "runner": "@pellegrims/nx-remotecache-s3",
            "options": {
                "cacheableOperations": ["build", "test", "lint", "e2e"],
                "bucket": "zenhalab-artifacts-dev",
                "name": "zenhalab-artifacts-dev",
                "prefix": "cache/nx/shortener/",
                "region": "us-east-1",
                "forcePathStyle": true,
                "readOnly": false
            }
        },
        "prod": {
            "runner": "@pellegrims/nx-remotecache-s3",
            "options": {
                "cacheableOperations": ["build", "test", "lint", "e2e"],
                "bucket": "zenhalab-artifacts-prod",
                "name": "approva-artifacts-prod",
                "prefix": "cache/nx/shortener/",
                "region": "us-east-1",
                "forcePathStyle": true,
                "readOnly": false
            }
        }
    }
}
