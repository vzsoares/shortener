{
    "name": "engine",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/engine",
    "tags": [],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "{projectRoot}",
                "command": "make build"
            },
            "outputs": ["function/function.zip"]
        },
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "{projectRoot}",
                "command": "make start"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "{projectRoot}",
                "command": "make test"
            }
        },
        "lint": {
            "executor": "@nx-go/nx-go:lint"
        },
        "tidy": {
            "executor": "@nx-go/nx-go:tidy"
        }
    }
}
